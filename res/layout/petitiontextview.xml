<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent">

	<TextView android:id="@+id/petitiontitle"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:paddingTop="10dip" />

	<TextView android:id="@+id/signedby" android:layout_below="@id/petitiontitle"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:text="Signed By:" android:paddingBottom="10dip" />

	<TextView android:id="@+id/number_of_signatures"
		android:layout_below="@id/petitiontitle" android:layout_toRightOf="@id/signedby"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:paddingLeft="30dip" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:paddingBottom="10dip" />


</RelativeLayout>

